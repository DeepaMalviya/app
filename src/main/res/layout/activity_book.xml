<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.BookActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">

                <View
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_gravity="center"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="@string/book_your_tailor"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_17sdp"
                    android:textStyle="normal" />

                <View
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_gravity="center"
                    android:background="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:elevation="4dp"
                    android:padding="@dimen/_5sdp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="@dimen/_5sdp"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="@dimen/_5sdp">

                    <EditText
                        android:id="@+id/ETFullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:ems="10"
                        android:gravity="left"
                        android:hint="Full Name"
                        android:padding="8dp"
                        android:textSize="14sp">

                        <requestFocus />
                    </EditText>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:elevation="4dp"
                    android:padding="@dimen/_5sdp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="@dimen/_5sdp"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="@dimen/_5sdp">

                    <EditText
                        android:id="@+id/etAddresss"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="start"
                        android:background="@color/white"
                        android:ems="10"
                        android:layout_marginTop="10dp"
                        android:gravity="bottom"
                        android:hint="Enter Address,Street,Colony,PinCode"
                        android:inputType="textMultiLine"
                        android:maxLines="2"
                        android:padding="8dp"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/btnCurrentBook"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_my_location_black_24dp"
                        android:drawableLeft="@drawable/ic_my_location_black_24dp"
                        android:drawablePadding="@dimen/_5sdp"
                        android:padding="8dp"
                        android:textStyle="bold"
                        android:textColor="@color/green_A700"
                        android:text="Get Current Location"
                        android:textSize="14sp"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>

