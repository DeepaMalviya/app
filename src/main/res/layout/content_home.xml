<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.HomeActivity"
    tools:showIn="@layout/app_bar_home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <com.glide.slider.library.SliderLayout
                    android:id="@+id/slider"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_margin="@dimen/_3sdp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_8sdp"
                    android:layout_weight="1"

                    android:elevation="@dimen/_4sdp"
                    app:cardCornerRadius="@dimen/_4sdp">

                    <LinearLayout
                        android:id="@+id/layoutMale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_4sdp">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_male_dress" />

                        <TextView
                            style="@style/lableText"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:text="Male"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/black"
                            android:visibility="invisible" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:elevation="@dimen/_4sdp"
                    app:cardCornerRadius="@dimen/_4sdp">

                    <LinearLayout
                        android:id="@+id/layoutFemle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_4sdp">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_female_dress" />

                        <TextView
                            style="@style/lableText"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:text="Female"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/black"
                            android:visibility="invisible" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:elevation="@dimen/_4sdp"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/_4sdp">

                    <LinearLayout
                        android:id="@+id/layoutKids"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_46sdp"
                            android:layout_height="@dimen/_46sdp"
                            android:src="@drawable/ic_kids_dress" />

                        <TextView
                            style="@style/lableText"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:text="Kids"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/black" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:elevation="@dimen/_4sdp"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/_4sdp">

                    <LinearLayout
                        android:id="@+id/layoutCatalog"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_4sdp">

                        <ImageView
                            android:layout_width="@dimen/_46sdp"
                            android:layout_height="@dimen/_46sdp"
                            android:src="@drawable/ic_catalog" />

                        <TextView
                            style="@style/lableText"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:text="Featured Brands"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/black"
                            android:visibility="invisible" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:elevation="@dimen/_4sdp"
                    app:cardCornerRadius="@dimen/_4sdp">

                    <LinearLayout
                        android:id="@+id/layoutEnquiry"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_4sdp">

                        <ImageView
                            android:layout_width="@dimen/_46sdp"
                            android:layout_height="@dimen/_46sdp"
                            android:src="@drawable/ic_masterji_logo_transparent" />

                        <TextView
                            style="@style/lableText"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:text="Book a Tailor"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/black"
                            android:visibility="invisible" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageOffers"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_170sdp"
                    android:layout_gravity="bottom"
                    android:scaleType="fitXY"
                    android:src="@drawable/banner_offers" />


            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>