<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4sdp"
    android:clickable="false"
    android:elevation="@dimen/_4sdp"
    android:focusable="false"
    app:cardCornerRadius="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">

            <TextView
                android:id="@+id/tvtitle"
                style="@style/lableText"
                android:gravity="left"
                tools:text="Product Title Name" />

            <TextView
                android:visibility="invisible"
                android:id="@+id/tvPrice"
                style="@style/lableText"
                android:layout_marginTop="@dimen/_8sdp"
                android:drawableLeft="@drawable/ic_indian_rupee_3"
                android:gravity="left"
                tools:text="150" />

            <TextView
                android:id="@+id/tvDeliveryDescription"
                style="@style/lableText"
                android:layout_marginTop="@dimen/_12sdp"
                android:gravity="left"
                android:visibility="gone"
                android:text="Delivery within 7 working days "
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivProductPhoto"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_margin="@dimen/_4sdp"
            android:src="@drawable/ic_image_placeholder" />

        <ImageView
            android:id="@+id/ivProductRemove"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_margin="@dimen/_4sdp"
            android:background="?selectableItemBackground"
            android:defaultFocusHighlightEnabled="false"
            android:focusedByDefault="false"
            android:screenReaderFocusable="false"
            android:src="@drawable/ic_cancel"
            android:tint="@color/black" />

    </LinearLayout>

</android.support.v7.widget.CardView>

