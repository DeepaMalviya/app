    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp">


        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:elevation="4dp"
                android:padding="@dimen/_5sdp"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/_5sdp"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardElevation="@dimen/_5sdp">

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_gravity="start"
                    android:background="@color/white"
                    android:ems="10"
                    android:layout_marginTop="10dp"
                    android:gravity="bottom"
                    android:hint="Enter Address,Street,Colony,PinCode"
                    android:inputType="textMultiLine"
                    android:maxLines="2"
                    android:padding="8dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/btnCurrentLocation1"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_my_location_black_24dp"
                    android:drawableLeft="@drawable/ic_my_location_black_24dp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/green_A700"
                    android:text="Get Current Location"
                    android:textSize="14sp"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>

