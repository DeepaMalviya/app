    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bgHeader"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-60dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:padding="5dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"

            android:layout_marginRight="50dp"
            android:background="@color/black"
            android:elevation="3dp"
            android:padding="15dp"
            app:cardCornerRadius="70dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:padding="10dp">


                <TextView
                    android:id="@+id/ivGooglepluss"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/round_back"
                    android:drawableLeft="@drawable/ic_gpluss"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="    Google login"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />


                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ivGooglepluss"
                    android:layout_marginTop="10dp"
                    android:background="@color/black" />


                <TextView
                    android:id="@+id/ivFacebookk"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_below="@+id/view1"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/round_next"
                    android:drawableLeft="@drawable/ic_facebookk"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="facebook login"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivNext"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/white"
                    app:srcCompat="@drawable/login_arrow" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <RelativeLayout
