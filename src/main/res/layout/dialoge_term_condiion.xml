<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:background="@color/yellow_A700"
        android:weightSum="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1.5"
            android:gravity="left"
            android:text="Terms  And Conditions"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivClose"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_margin="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_cancel20"
            android:scaleType="center"
            android:tooltipText="Skip Login" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!--<ImageView-->
            <!--android:id="@+id/ivClose"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="top|right"-->
            <!--android:layout_margin="@dimen/_10sdp"-->
            <!--android:background="@drawable/ic_cancel"-->
            <!--android:backgroundTint="@color/black"-->
            <!--android:scaleType="center"-->
            <!--android:tooltipText="Skip Login" />-->

            <!--<TextView-->
            <!--style="@style/lableText"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_marginTop="@dimen/_5sdp"-->
            <!--android:gravity="left"-->
            <!--android:text="Terms  And Conditions"-->
            <!--android:textStyle="bold" />-->

            <TextView
                style="@style/lableText"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="left"
                android:text="* If any garments are not perfectly stitched by us, you can claim within 5 days only."
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />




            <TextView
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                style="@style/lableText"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="left"
                android:text="* When on pick up and delivery user should give confirmation for his garment at the same time."
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"

                style="@style/lableText"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="left"
                android:text="* We can provide 3 pickups and delivery on a single order, after that it will be chargeable on any modifications."
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"

                style="@style/lableText"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="left"
                android:text="* We are providing premium services also but it would be chargeable. (In morning 6:00 am  to 9:00 A.M. and 7:00 P.M. to 11:00 P.M. with extra hours)" />

            <TextView
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"

                style="@style/lableText"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="left"
                android:text="* Our Tailors are committed to provide the best quality of service to all our customers, however, if you find an issue with fitting or quality of service or an alteration then you can contact us on our customer care number within a week of delivering your shipment." />

            <TextView
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"

                style="@style/lableText"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="left"
                android:text="* Standard delivery takes 7 working days however customers can avail express service to get the dresses delivered in 2 or 3 days by paying extra charges." />


            <Button
                android:id="@+id/confirm1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/roun_rect_orange"
                android:text="CONFIRM"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>