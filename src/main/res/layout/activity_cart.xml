<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/subParentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">


        <ListView
            android:id="@+id/cartProductList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:nestedScrollingEnabled="true"
            android:visibility="visible" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_4sdp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvFinalPriceBottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_indian_rupee_3"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black"
                        android:visibility="invisible"
                        tools:text="" />

                    <TextView
                        android:id="@+id/tvViewPriceDetail"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="View Price Detail"
                        android:textColor="@color/blue_A700"
                        android:visibility="invisible"
                        />
                </LinearLayout>

                <Button
                    android:id="@+id/btnContinue"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:foreground="?selectableItemBackground"
                    android:text="Book"
                    android:textAllCaps="true"
                    android:textColor="@color/black" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <ImageView

        android:id="@+id/ivEmptyCart"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/bucket"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvEmptyCart"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Your bucket is Empty"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_40sdp"
        android:textStyle="normal"
        android:visibility="gone" />

</LinearLayout>